<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:background="#FFFDF7"
    tools:context=".MainActivity">


    <!-- Main content MotionLayout (bottom sheet, map, UI) -->
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_scene">

        <!-- MapView -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- PawPals Logo -->
        <ImageView
            android:id="@+id/logoTop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pawpals_logo"
            android:contentDescription="PawPals Logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Hamburger Menu -->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_rounded_white"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Open Menu"
            app:srcCompat="@drawable/baseline_menu_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bottom Sheet -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bottomSheetCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sheet"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/bottomContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <View
                        android:layout_width="36dp"
                        android:layout_height="4dp"
                        android:background="@drawable/bg_handle"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Toggle -->
                    <FrameLayout
                        android:id="@+id/visibilityToggle"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="61dp"
                        android:background="@drawable/bg_toggle_container"
                        android:padding="6dp"
                        android:elevation="8dp">

                        <LinearLayout
                            android:id="@+id/customToggleSwitch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_toggle_selector"
                            android:gravity="center"
                            android:paddingHorizontal="16dp">

                            <TextView
                                android:id="@+id/labelInvisible"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Invisible"
                                android:textColor="#F44336"
                                android:gravity="center"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/labelVisible"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Visible"
                                android:textColor="#4CAF50"
                                android:gravity="center"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Greeting Text -->
                    <TextView
                        android:id="@+id/greetingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, User!"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#1F3B3D"
                        android:layout_marginBottom="4dp" />

                    <!-- שאר התוכן -->
                    <TextView
                        android:id="@+id/communityStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading community stats..."
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:layout_marginBottom="8dp" />

                    <!-- Activity Stats -->
                    <TextView
                        android:id="@+id/activeUsersStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active users nearby: 0"
                        android:textSize="14sp"
                        android:textColor="#1F3B3D"
                        android:layout_marginTop="16dp" />

                    <!-- Community Awards -->
                    <TextView
                        android:id="@+id/totalDogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total dogs in community:"
                        android:textSize="14sp"
                        android:textColor="#5D4037"
                        android:layout_marginTop="12dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:id="@+id/actionButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/newReportButtonContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_card"
                            android:padding="12dp"
                            android:layout_margin="4dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_report"
                                android:contentDescription="New Report Icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Report"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/communityButtonContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_card"
                            android:padding="12dp"
                            android:layout_margin="4dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_community"
                                android:contentDescription="Community Page Icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Community Page"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Status Bar -->
                    <TextView
                        android:id="@+id/statusBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You are part of the community: community_name"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>

    <!-- Drawer MotionLayout -->
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/drawerMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutDescription="@xml/motion_drawer_scene">

        <View
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/sideDrawer"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pawpals_logo"
                android:contentDescription="PawPals Logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/myProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="18sp"
                android:textColor="#1F3B3D"
                android:textStyle="bold"
                android:paddingVertical="12dp" />

            <TextView
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="18sp"
                android:textColor="#1F3B3D"
                android:paddingVertical="12dp" />

            <TextView
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textSize="18sp"
                android:textColor="#F44336"
                android:paddingVertical="12dp" />
        </LinearLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
