<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF7"
    tools:context=".MainActivity">

    <!-- Main content MotionLayout (bottom sheet, map, UI) -->
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_scene">

        <!-- MapView -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PawPals Logo - קטן ועדין מעל התפריט -->
        <ImageView
            android:id="@+id/logoTop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pawpals_logo"
            android:contentDescription="PawPals Logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Hamburger button -->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_rounded_white"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:contentDescription="תפריט"
            app:srcCompat="@drawable/baseline_menu_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bottom Sheet -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomSheet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_sheet"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                app:layout_constraintTop_toTopOf="parent">


                <View
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_handle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <!-- כפתור מצב נראה/בלתי נראה -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_toggle_container"
                    android:padding="8dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:id="@+id/customToggleSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_toggle_selector"
                        android:gravity="center"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/labelInvisible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="לא נראה"
                            android:textColor="#F44336"
                            android:gravity="center"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/labelVisible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="נראה"
                            android:textColor="#4CAF50"
                            android:gravity="center"
                            android:textSize="16sp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- מידע קהילתי -->
                <LinearLayout
                    android:id="@+id/communityInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42 משתמשים מחוברים באזור שלך"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#1F3B3D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ברוך הבא לקהילת הכלבים של רמת גן!"
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- כפתורי פעולה -->
                <LinearLayout
                    android:id="@+id/actionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card"
                        android:padding="12dp"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="דיווח חדש"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card"
                        android:padding="12dp"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_community" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="עמוד הקהילה"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card"
                        android:padding="12dp"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_view_reports" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="צפה בדיווחים"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- כפתור דוחות -->
                <Button
                    android:id="@+id/communityButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="דוחות"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#E3702D"
                    android:background="@drawable/bg_rounded_orange"
                    android:padding="14dp"
                    android:layout_marginTop="24dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <!-- Drawer MotionLayout -->
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/drawerMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_drawer_scene">

        <View
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/sideDrawer"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pawpals_logo"
                android:contentDescription="PawPals Logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הפרופיל שלי"
                android:textSize="18sp"
                android:textColor="#1F3B3D"
                android:textStyle="bold"
                android:paddingVertical="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגדרות"
                android:textSize="18sp"
                android:textColor="#1F3B3D"
                android:paddingVertical="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="התנתק"
                android:textSize="18sp"
                android:textColor="#F44336"
                android:paddingVertical="12dp" />
        </LinearLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
