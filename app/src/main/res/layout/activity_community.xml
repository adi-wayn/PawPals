<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="16dp"
    tools:context=".CommunityActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCommunityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PawPals Community"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/imageViewProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Barrier שממקם את הקו מתחת לשם+תמונה -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/headerBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textViewCommunityName,imageViewProfile"
        app:barrierAllowsGoneWidgets="true"
        app:barrierMargin="8dp" />
    <!-- קו הפרדה טורקיז עדין -->
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:dividerColor="@color/pp_colorPrimary"
        app:thickness="1dp"
        app:dividerInsetStart="0dp"
        app:dividerInsetEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:clipToPadding="false"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintBottom_toTopOf="@id/buttonAreaMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_post_card"/>

    <!-- שורה ראשונה -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAreaMap"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="8dp"
        android:text="Area Map"
        android:textColor="?attr/colorOnSurface"
        app:icon="@android:drawable/ic_dialog_map"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonMembers"
        app:layout_constraintEnd_toStartOf="@+id/buttonReportSystem" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonReportSystem"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:text="Report System"
        android:textColor="?attr/colorOnSurface"
        app:icon="@drawable/imagetostl_com_whatsapp_image_2025_05_07_at_17_27_17"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonChat"
        app:layout_constraintStart_toEndOf="@+id/buttonAreaMap" />

    <!-- שורה שנייה (צמודה לתחתית) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMembers"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Members"
        android:textColor="?attr/colorOnSurface"
        app:icon="@drawable/ic_community"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonChat" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonChat"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Chat"
        android:textColor="?attr/colorOnSurface"
        app:icon="@android:drawable/stat_notify_chat"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMembers" />

</androidx.constraintlayout.widget.ConstraintLayout>
