<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="16dp"
    tools:context=".ManagerCommunityActivity">

    <!-- ===== Community Header Section ===== -->
    <LinearLayout
        android:id="@+id/communityHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/header_bg_card"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- תמונת הקהילה -->
        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/image_circle_mask"
            android:contentDescription="Community Image"
            android:clipToOutline="true" />

        <!-- טקסטים -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewCommunityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PawPals Community"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCommunityDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A friendly local dog community!"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- קו הפרדה -->
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:dividerColor="@color/pp_colorPrimary"
        app:thickness="1dp"
        app:layout_constraintTop_toBottomOf="@id/communityHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- רשימת פוסטים -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:clipToPadding="false"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintBottom_toTopOf="@id/buttonAreaMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_post_card" />

    <!-- שורה 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAreaMap"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="8dp"
        android:text="Area Map"
        android:textColor="?attr/colorOnSurface"
        app:icon="@android:drawable/ic_dialog_map"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonReportSystem"
        app:layout_constraintEnd_toStartOf="@+id/buttonViewReports" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewReports"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:text="View Reports"
        android:textColor="?attr/colorOnSurface"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonChat"
        app:layout_constraintStart_toEndOf="@+id/buttonAreaMap" />

    <!-- שורה 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonReportSystem"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Write Post"
        android:textColor="?attr/colorOnSurface"
        app:icon="@drawable/imagetostl_com_whatsapp_image_2025_05_07_at_17_27_17"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonMembers"
        app:layout_constraintEnd_toStartOf="@+id/buttonChat" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonChat"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Chat"
        android:textColor="?attr/colorOnSurface"
        app:icon="@android:drawable/stat_notify_chat"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonCommunitySettings"
        app:layout_constraintStart_toEndOf="@+id/buttonReportSystem" />

    <!-- שורה 3 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMembers"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Members"
        android:textColor="?attr/colorOnSurface"
        app:icon="@drawable/ic_community"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCommunitySettings" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCommunitySettings"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Settings"
        android:textColor="?attr/colorOnSurface"
        app:icon="@android:drawable/ic_menu_manage"
        app:iconGravity="textTop"
        app:iconPadding="4dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnSurface"
        app:backgroundTint="@color/white"
        style="@style/Widget.PawPals.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMembers" />

</androidx.constraintlayout.widget.ConstraintLayout>