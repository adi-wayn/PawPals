<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddDogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dog Picture -->
        <ImageView
            android:id="@+id/img_dog"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/rex_image"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:contentDescription="Dog Picture" />

        <Button
            android:id="@+id/btn_upload_dog_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Upload Dog Picture"
            android:layout_marginBottom="16dp" />

        <!-- Basic Info -->
        <EditText
            android:id="@+id/et_dog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dog name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_dog_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dog breed"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_dog_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dog age"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- Neutered -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Neutered"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <Switch
                android:id="@+id/switch_neutered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Personality -->
        <EditText
            android:id="@+id/et_dog_personality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Personality (e.g. friendly, playful)"
            android:inputType="textCapSentences"
            android:layout_marginBottom="8dp" />

        <!-- Mood -->
        <EditText
            android:id="@+id/et_dog_mood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current mood (e.g. calm, excited)"
            android:inputType="textCapSentences"
            android:layout_marginBottom="8dp" />

        <!-- Notes -->
        <EditText
            android:id="@+id/et_dog_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional notes"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_save_dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Dog" />
    </LinearLayout>
</ScrollView>