<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dog_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layoutDirection="locale"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: תמונה + שם/גיל -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- תמונה מעוגלת עם מסגרת דקה -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/dog_picture"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/dog_picture"
                android:scaleType="centerCrop"
                android:src="@drawable/rex_image"
                tools:srcCompat="@tools:sample/avatars"
                app:shapeAppearanceOverlay="@style/Shape.Round24"
                app:strokeColor="@color/pp_colorPrimary"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/dog_name"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dog_name_placeholder"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/dog_age"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dog_age_placeholder"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>

        <!-- קו הפרדה טורקיז -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            app:dividerColor="@color/pp_colorPrimary"
            app:thickness="1dp" />

        <!-- כרטיס פרטי הכלב -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="@color/pp_colorOutline"
            app:strokeWidth="1dp"
            app:shapeAppearance="@style/Shape.Round16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Row: תווית + ערך -->
                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breed"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.85" />
                <TextView
                    android:id="@+id/dog_breed"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breed_placeholder"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:thickness="1dp"
                    app:dividerColor="?attr/colorOutline" />

                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/neutered"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.85" />
                <TextView
                    android:id="@+id/dog_neutered"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:thickness="1dp"
                    app:dividerColor="?attr/colorOutline" />

                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/personality"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.85" />
                <TextView
                    android:id="@+id/dog_personality"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/personality_placeholder"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:thickness="1dp"
                    app:dividerColor="?attr/colorOutline" />

                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/mood"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.85" />
                <TextView
                    android:id="@+id/dog_mood"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_placeholder"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:thickness="1dp"
                    app:dividerColor="?attr/colorOutline" />

                <TextView
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/notes"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.85" />
                <TextView
                    android:id="@+id/dog_notes"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notes_placeholder"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
