<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layoutDirection="locale"
    android:background="@color/app_background"
    tools:context=".ProfileActivity">

    <!-- Header: תמונה + נקודת סטטוס + שם -->
    <LinearLayout
        android:id="@+id/user_profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <!-- תמונה מעוגלת עם מסגרת דקה טורקיז -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars"
                app:shapeAppearanceOverlay="@style/Shape.Round24"
                app:strokeColor="@color/pp_colorPrimary"
                app:strokeWidth="1dp" />

            <!-- נקודת סטטוס ירוקה (עם מסגרת לבנה) -->
            <View
                android:id="@+id/friend_status_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/status_indicator_online" />
        </FrameLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/user_name_placeholder"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Divider טורקיז -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:dividerColor="@color/pp_colorPrimary"
        app:thickness="1dp" />

    <!-- כרטיס מידע: About + Contact -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeColor="@color/pp_colorOutline"
        app:strokeWidth="1dp"
        app:shapeAppearance="@style/Shape.Round16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- About -->
            <TextView
                android:id="@+id/bio_title"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.85" />

            <TextView
                android:id="@+id/bio_text"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short bio goes here…"
                android:textColor="?attr/colorOnSurface"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="12dp"
                tools:text="Dog lover, early riser, love morning park walks and organizing weekend meetups." />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="?attr/colorOutline"
                app:thickness="1dp" />

            <!-- Contact -->
            <TextView
                android:id="@+id/contact_title"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Contact"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.85" />

            <TextView
                android:id="@+id/contact_text"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@example.com | 050-0000000"
                android:autoLink="email|phone"
                android:linksClickable="true"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="4dp"
                tools:text="bella.owner@gmail.com | 050-1234567" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- טוגלים: Friends / Dogs (עם גוון רך ונעים) -->
    <LinearLayout
        android:id="@+id/toggle_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_friends"
            style="@style/Widget.PawPals.ButtonTransparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Friends"
            app:backgroundTint="@color/toggle_friends_bg"
            android:textColor="@color/toggle_friends_text"
            app:iconTint="@color/toggle_friends_text"
            app:strokeColor="@color/toggle_friends_stroke"
            app:strokeWidth="1dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_dogs"
            style="@style/Widget.PawPals.ButtonTransparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dogs"
            app:backgroundTint="@color/toggle_dogs_bg"
            android:textColor="@color/toggle_dogs_text"
            app:iconTint="@color/toggle_dogs_text"
            app:strokeColor="@color/toggle_dogs_stroke"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <!-- אזור תוכן מתחלף בתוך כרטיס (נעים + עקבי) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeColor="@color/pp_colorOutline"
        app:strokeWidth="1dp"
        app:shapeAppearance="@style/Shape.Round16">

        <FrameLayout
            android:id="@+id/content_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Friends list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friends_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_profile_card"
                tools:itemCount="6" />

            <!-- Dogs list -->
            <ScrollView
                android:id="@+id/dogs_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/dogs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:dividerPadding="8dp"
                    android:divider="?android:attr/dividerHorizontal" />
            </ScrollView>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- FAB להוספת כלב (Primary טורקיז) -->
    <LinearLayout
        android:id="@+id/add_dog_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fab_add_dog"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_dog"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            app:cornerRadius="16dp"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>

    <!-- סטטוס קהילה -->
    <TextView
        android:id="@+id/community_status"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_community"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
