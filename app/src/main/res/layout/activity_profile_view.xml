<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layoutDirection="locale"
    android:background="?android:windowBackground"
    tools:context=".ProfileActivity">

    <!-- User Profile Section (unchanged) -->
    <LinearLayout
        android:id="@+id/user_profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:id="@+id/friend_status_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/status_indicator" />
        </FrameLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/user_name_placeholder"
            android:textAppearance="?attr/textAppearanceHeadline6" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:background="@color/light_gray" />

    <!-- Bio -->
    <TextView
        android:id="@+id/bio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/bio_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short bio goes here…"
        android:textAppearance="?attr/textAppearanceBody2"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="12dp"
        tools:text="Dog lover, early riser, love morning park walks and organizing weekend meetups." />

    <!-- Contact -->
    <TextView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/contact_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@example.com | 050-0000000"
        android:autoLink="email|phone"
        android:linksClickable="true"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_marginBottom="16dp"
        tools:text="bella.owner@gmail.com | 050-1234567" />

    <!-- Toggle buttons -->
    <LinearLayout
        android:id="@+id/toggle_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_friends"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Friends" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_dogs"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dogs" />
    </LinearLayout>

    <!-- Switchable content area -->
    <FrameLayout
        android:id="@+id/content_switcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Friends list (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friends_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_profile_card"
            tools:itemCount="6" />

        <!-- Dogs list scroll -->
        <ScrollView
            android:id="@+id/dogs_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/dogs_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp" />
        </ScrollView>

        <!-- NOTE: ה-FAB שהיה כאן הוסר -->
    </FrameLayout>

    <!-- Extended FAB under the scroll (no outline) -->
    <LinearLayout
        android:id="@+id/add_dog_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:padding="8dp">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_add_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add dog"
            android:contentDescription="@string/add_dog"
            app:icon="@drawable/ic_add"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:showMotionSpec="@animator/mtrl_extended_fab_show_motion_spec"
            app:hideMotionSpec="@animator/mtrl_extended_fab_hide_motion_spec" />
    </LinearLayout>

    <!-- Community Status -->
    <TextView
        android:id="@+id/community_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_community"
        android:textAppearance="?attr/textAppearanceBody2"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
