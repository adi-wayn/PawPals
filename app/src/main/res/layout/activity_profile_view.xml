<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_view_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layoutDirection="locale"
    tools:context=".ProfileViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layoutDirection="inherit">

        <!-- Profile Picture with Status Indicator -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile"
                tools:src="@tools:sample/avatars" /> <!-- replace with actual image or use Glide/Picasso -->
            android:contentDescription="@string/profile_picture" />

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/status_indicator_background"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp" />
        </FrameLayout>

        <!-- User's Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layoutDirection="inherit" />

        <!-- Dogs Section -->
        <LinearLayout
            android:id="@+id/dogs_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Example dog card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:layoutDirection="inherit">

                <ImageView
                    android:id="@+id/dog_picture"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/dog_picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_dog"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dog_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dog Name"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/dog_breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dog Breed"
                        android:textAppearance="?attr/textAppearanceBody2" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Community Membership Indicator -->
        <TextView
            android:id="@+id/community_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This user is in your community"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
