<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- שם הקהילה -->
        <TextView
            android:id="@+id/tvCommunityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp" />

        <!-- פתיחת בקשות ניהול -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow manager applications from members"
            android:textColor="?attr/colorOnSurface" />

        <Switch
            android:id="@+id/swOpenApplications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="12dp" />

        <!-- תיאור קהילה -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Description"
            android:textColor="?attr/colorOnSurface" />

        <EditText
            android:id="@+id/etCommunityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write something about your community..."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- העלאת תמונה -->
        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:backgroundTint="@color/pp_colorPrimary"
            android:textColor="@android:color/white" />

        <!-- תצוגת תמונה -->
        <ImageView
            android:id="@+id/imgCommunity"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/image_border"
            android:contentDescription="Community Image"
            android:clipToOutline="true" />

        <!-- כפתור מחיקת תמונה -->
        <Button
            android:id="@+id/btnDeleteImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#DCF64539"
            android:text="Delete Image"
            android:textColor="@android:color/white" />

        <!-- שמירה -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/pp_colorPrimary"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
