<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header (תמונה + שם משתמש) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile_placeholder"
                android:contentDescription="User Avatar"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/text_post_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_post_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_post_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <!-- תצוגה מקוצרת -->
        <TextView
            android:id="@+id/text_post_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the short preview of the message..."
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- ✅ פה נכנס הקטע שהוספת -->
        <!-- תוכן מורחב -->
        <TextView
            android:id="@+id/text_post_message_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full message will be shown here..."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

        <!-- כפתורי אישור/דחייה -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/holo_green_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:backgroundTint="@android:color/holo_red_light" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
