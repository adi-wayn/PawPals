<resources>
    <style name="PawPals.TextTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F3B3D</item>
    </style>

    <style name="PawPals.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F3B3D</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="Widget.PawPals.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="shapeAppearance">@style/Shape.Round16</item>
        <item name="iconTint">#000000</item>
    </style>

    <style name="Widget.PawPals.ButtonTransparent" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/Shape.Round16</item>
    </style>
</resources>
