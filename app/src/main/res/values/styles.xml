<resources>

    <!-- סגנון כללי לאפליקציה -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- צבע רקע של האפליקציה -->
        <item name="android:windowBackground">#FFFDF7</item>
    </style>
    <style name="PawPals">
        <!-- הגדרות הסגנון כאן -->
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!--בבררת מחדל לטקסט-->
    <style name="PawPals.TextTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F3B3D</item>
    </style>
    <style name="PawPals.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F3B3D</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- סגנון ברירת מחדל לכל MaterialButton -->
    <style name="Widget.PawPals.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#E3702D</item> <!-- כתום -->
        <item name="cornerRadius">12dp</item> <!-- עיגול פינות -->
        <item name="android:textColor">#FFFFFF</item> <!-- טקסט לבן -->
        <item name="android:textSize">16sp</item> <!-- גודל טקסט -->
    </style>

    <style name="Widget.PawPals.ButtonTransparent">
        <item name="backgroundTint">#00E3702D</item> <!-- כתום -->
        app:backgroundTint="@android:color/transparent"
        <item name="cornerRadius">12dp</item> <!-- עיגול פינות -->
    </style>

</resources>
