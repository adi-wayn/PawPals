<resources>
    <style name="Theme.PawPals" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/app_background</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="shapeAppearanceSmallComponent">@style/Shape.Round16</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Round16</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Round16</item>
    </style>

    <style name="Shape.Round16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
