<resources>

    <style name="Theme.PawPals" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/pp_colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/pp_colorOnPrimaryDark</item>
        <item name="colorSecondary">@color/pp_colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/pp_colorOnSecondaryDark</item>
        <item name="colorTertiary">@color/pp_colorTertiaryDark</item>
        <item name="colorOnTertiary">@color/pp_colorOnTertiaryDark</item>
        <item name="android:colorBackground">@color/pp_colorBackgroundDark</item>
        <item name="colorSurface">@color/pp_colorSurfaceDark</item>
        <item name="colorOnSurface">@color/pp_colorOnSurfaceDark</item>
        <item name="colorOutline">@color/pp_colorOutlineDark</item>
        <item name="colorError">@color/pp_colorErrorDark</item>
        <item name="colorOnError">@color/pp_colorOnErrorDark</item>

        <!-- Window / Bars -->
        <item name="android:windowBackground">@color/pp_colorBackgroundDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
        <!-- בדארק לא מגדירים windowLightStatusBar/NavigationBar -->

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Round12</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Round16</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Round24</item>

        <!-- Typography -->
        <item name="textAppearanceHeadlineMedium">@style/PawPals.TextTitle</item>
        <item name="textAppearanceLabelLarge">@style/PawPals.TextButton</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.PawPals.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.PawPals.ButtonTransparent</item>
    </style>

</resources>
